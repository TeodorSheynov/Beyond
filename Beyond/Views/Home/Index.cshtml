@{
    ViewData["Title"] = "Home";
}
@section CSS{
    <link rel="stylesheet" href="~/css/homeVideo.css" />
}
<video autoplay muted loop id="myVideo">
    <source src="/img/home-video/intro.mp4" type="video/mp4">
</video>

<div class="content">
    <h1>Mars</h1>
    <p>Now space travel is reality.</p>
    <!-- Use a button to pause/play the video with JavaScript -->
    <button id="myBtn" onclick="StartPause()">Pause</button>
</div>

@section Scripts
{
    <script src="/js/StartPause.js"></script>
}