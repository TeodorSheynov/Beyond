@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-log-reg">
    <form method="post">
        <div class="row">
            <h2 class="login-header" style="text-align:center">Register</h2>
            <div class="col">
                <div asp-validation-summary="All" style="color: orangered;"></div>
                <input asp-for="Input.Email" required="" class="login-input" type="text" placeholder="Email">
                <span asp-validation-for="Input.Email" cstyle="color: orangered;"></span>
                <input asp-for="Input.Password" required="" class="login-input" type="password" placeholder="Password">
                <span asp-validation-for="Input.Password" style="color: orangered;"></span>
                <input asp-for="Input.ConfirmPassword" required="" class="login-input" type="password" placeholder="Password">
                <span asp-validation-for="Input.ConfirmPassword" style="color: orangered;"></span>
                <input class="login-button" type="submit" value="Register">
            </div>
            <div class="bottom-container">
                <div class="row">
                    <div class="col">
                        <a style="color:white" class="log-form-links">Have an account? </a>
                        <a asp-area="Identity" asp-page="/Account/Login" class="log-form-links" type="button">Log in.</a>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>